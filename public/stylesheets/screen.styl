html, body
  width 1024px
  height 748px
  position relative
#map
  width 768px
  height 748px
  bottom 0
  left 0
  background-image url(/images/diplomacy_map.png)

#side
  height 100%
  width 256px
  top 0
  right 0



c_aus = #d33847 //r
c_fra = #e66e1d //o
c_ger = #e6ce0e //y
c_rus = #65af3d //g
c_ita = #00a1a3 //b
c_tur = #824eff //v

text_l = 26px
text_m = 20px
text_s = 16px

#diplomacy
  background #000
  font-family Oxygen

.lobby
  color #fff
  .game
    clear both

  a
    color #fff
    text-decoration none

  .game-link
    .info
      width 180px
      height 120px
      border-left 10px #000 solid
      float left
      padding-left 10px

      .turn
        font-size text_m
      .status
        font-size text_s
      .message
        font-size text_s

  .players
    width 180px
    float left
    .user
      border-top 5px #000 solid
      width 50px
      height 50px
      float left
      margin 0 10px 10px 0


.Aus
  border-color c_aus !important
.Fra
  border-color c_fra !important
.Ger
  border-color c_ger !important
.Rus
  border-color c_rus !important
.Ita
  border-color c_ita !important
.Tur
  border-color c_tur !important